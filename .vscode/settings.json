{
  // Enable per-language
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },

  "files.exclude": {
    "**/.git": true,
    "node_modules": true,
    ".nyc_output": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
